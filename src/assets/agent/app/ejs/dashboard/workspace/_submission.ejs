<script type="text/x-handlebars" data-template-name="submission">
  <h2>Submission from {{applicant.first}} {{applicant.last}}</h2>
  <br><br>
  Submitted:  {{submitted}}<br>
  <!-- comments -->
  <ul>
  {{#each comment in submission_comments}}
    <li>
      {{comment.title}}<br/>
      {{comment.body}}
    </li>
  {{/each}}
  </ul>

  {{view App.CommentFormView}}
</script>
<script type="text/x-handlebars" data-template-name="comment_form">
  <form>
    <!-- comments form -->

    <label for="title">Title</label>
    {{view Ember.TextField type="text" valueBinding='title' name="title"}}
    <br/>

    <label for="body">Body</label>
    {{view Ember.TextField valueBinding='body' name="body"}}
    <br/>

    <button {{action 'submit' newComment}}>Submit</button>
  </form>
</script>
